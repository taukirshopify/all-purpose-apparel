            {
               "type": "text",
               "id": "shop",
               "label": "Shop Now",
               "default": "Shop Now",
               "placeholder": "Shop Now"
            },
            {
               "type": "url",
               "id": "link",
               "label": "Shop Now link",
               "info": "Button link"
            },
            {
               "type": "image_picker",
               "id": "img",
               "label": "Slider Main left Image"
            },
            {
               "type": "image_picker",
               "id": "imgw",
               "label": "Slider wave  Image"
            },
            {
               "type": "image_picker",
               "id": "img1",
               "label": "Slider Shap 01"
            },
            {
               "type": "image_picker",
               "id": "img2",
               "label": "Slider Shap 01"
            }
            ]
          }
        ],
        "presets": [
            {
              "name": "Bannar"
            }]
        
    }
{% endschema %}


<style>
.splide__track {

    overflow: visible;
}
</style>



<script> 

   window.addEventListener('load', function () {
      var newWindowWidth = $(window).width();
        if (newWindowWidth > 800) {
  var elementha = document.getElementById('hello');

   const getheight = elementha.offsetHeight;

     
  [...document.querySelectorAll(".fulwidth-wrapper")].map(
    (element, index, array) => {

      element.style["height"] = getheight + "px";
    }
  );
 
   }

});
document.addEventListener( 'DOMContentLoaded', function () {
  new Splide( '#image-carousel', {

    arrows:false,
    pagination : false,
  } ).mount();
} );
</script>