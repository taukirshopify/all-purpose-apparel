{% schema %}
    {
        "name": "Yellow Page Bannar",
        "class": "yellowpagebannar",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Page Name",
            "default": "NEWS",
            "placeholder": "NEWS"
          },
          {

            "type": "color",
            "id": "t-color",
            "label": "Title Color",
            "default": "#F8F8F8"
          },
          {
            "type": "checkbox",
            "id": "show_announcement",
            "label": "Show announcement",
            "default": true
          },
          {

            "type": "color",
            "id": "color",
            "label": "Section Backound Color",
            "default": "#F8F8F8"
          },{
            "type": "select",
            "id": "arroa",
            "label": "Please Select your Wave Color",
            
            "options": [
                {
            
                "value": "Orange",
                "label": "Orange"
                },
                {
            
                "value": "Yellow",
                "label": "Yellow"
                }
            ],
            "default": "Orange"
          
           }
        ],	
        "presets": [
            {
              "name": "Yellow Page Bannar"
            }]
    }
{% endschema %}



<style>
    .blog-area {
       
        padding: 119px 0;
    }
    .blog-area-row{
        grid-column-gap:36px ;
    }
    .blog-title {
        background-color:{{ section.settings.color }};
        padding-top: 103px;
        padding-bottom: 95px;
      {% if section.settings.show_announcement == true %}
        border-bottom: 1px solid #000000;
      {% endif %}
    }
    .blog-card a{
        text-decoration: none;
        color: #000000;
        cursor: pointer;
    }
    .blog-title h4 {
        color: black;
        font-family: 'GT Super Txt Trial';
        font-weight: 700;
        font-size: 72px;
        line-height: 83px;
        text-align: center;
        cursor: pointer;
        color:{{ section.settings.t-color }}
    }
    @media screen and (max-width:767px) {
        .blog-title h4 {
           
            font-size: 42px;

         
        }
    }
</style>