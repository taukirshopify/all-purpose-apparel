<footer class="footer-wrapper">
  <div class="widget-area">
      <div class="container">
          <div class="row  justify-content-center   justify-content-xxl-between ">
              <div class="col-xxl-auto col-xl-4">
                  <div class="footer-left">
                      <div class="footer-logo">
                          <img src="{{ section.settings.img  | img_url: 'master' }}" alt="Hypland">
                      </div>
                      <div class="ot-social ot-social2">
                          {% if settings.facebook != blank %}
                              <a target="_blank" href="{{section.settings.facebook}}">
                                {% render 'facebook' %}
                              </a>
                            {% endif %}
                            {% if settings.instagram != blank %}
                          <a target="_blank" href="{{section.settings.instagram}}">
        
                                {% render 'instagram' %}
        
                          </a>
                        {% endif %}
                        {% if settings.twitter != blank %}
                          <a target="_blank" href="{{section.settings.twitte}}">

                            {% render 'twitter' %}
                          
                          
                      </a>
                    {% endif %}
        
                    {% if settings.ticktok != blank %}
                          <a target="_blank" href="{{section.settings.ticktok}}">
                            
                         {% render 'tiktok' %}
                        
                        
                        </a>
                      {% endif %}
                        {% if settings.discord != blank %}
                          <a target="_blank" href="{{ section.settings.discord}}">
                          
                          {% render 'discord' %}
                          
                          </a>
                        {% endif %}
                      </div>
                  </div>
              </div>
              <div class="col-xxl-9 col-xl-8">
                  <div class="footer-right">
                      <div class="footer-menu-wrap">
                          <div class="footer-menu">
                              {% assign footer_menu_2 = section.settings.menu02 %}
                              {% for link in linklists[footer_menu_2].links %}
                              <li><a href="{{link.url}}">{{ link.title }}</a></li>
                              {% endfor %}
                          </div>
                          {% comment %} <div class="footer-menu">
                              <ul>
                                  {% assign footer_menu_4 = section.settings.menu01 %}
                                  {% for link in linklists[footer_menu_4].links %}
                                  <li><a href="{{link.url}}">{{ link.title }}</a></li>
                                  {% endfor %}
                              </ul>
                          </div> {% endcomment %}
                      </div>

                          <div class="payment-all-wrapper">
                              <div class="payment-methods">
                
                                  {%- for type in shop.enabled_payment_types -%}
                                      <li class="list-payment__item">
                                        {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                                      </li>
                                    {%- endfor -%}
                                
                              </div>
                          </div>

                  </div>
              </div>
          </div>
      </div>
  </div>
  <div class="container">
      <div class="container">
        {% comment %} {{ shop.name }}  {% endcomment %}
          <p class="copyright">    &copy; {{ 'now' | date: '%Y' }}, {{ section.settings.copy }}</p>
      </div>
     
  </div>
</footer>

{% schema %}
  {
      "name": "Footer",
      "class": "Featured",
      "settings": [
       {
          "type": "image_picker",
          "id": "img",
          "label": "Footer Logo"
       },
       {
          "type": "color",
          "id": "a",
          "label": "Icon color",
          "default": "#fff"
       },
       {
          "type": "color",
          "id": "a1",
          "label": "Icon Hover color",
          "default": "#f0f"
       },
       {
        "type": "url",
        "id": "facebook",
        "label": "Facebook link"
      },
      {
        "type": "url",
        "id": "instagram",
        "label": "Instagram link"
      },
      {
        "type": "url",
        "id": "twitter",
        "label": "Twitter link"
      },
      {
        "type": "url",
        "id": "ticktok",
        "label": "Ticktok link"
      },
      {
        "type": "url",
        "id": "discord",
        "label": "Discord link"
      },

    {
      "type": "link_list",
      "id": "menu02",
      "label": "Select your Footer First menu"
    },
    {
      "type": "text",
      "id": "copy",
      "label": "Copy Right",
      "default": "Allpurpose 2022 all rights reserved",

      "placeholder": "Allpurpose 2022 all rights reserved"
    }
          ],
          "blocks": [
              {
                  "type": "Payment",
                  "name": "Payment Method",
                  "settings": [
                      {
                          "type": "image_picker",
                          "id": "imga",
                          "label": "Your Payment method Picture"
                      }
                  ]
              }
          ]
          
  }
{% endschema %}


