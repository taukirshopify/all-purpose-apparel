            <div class="fieldb radio-buttons">
              <input type="radio" name="contact[contact_method]" value="email" id="contact-method">
              <label for="contact-method">i agree with the terms and conditions</label>
              
             
            </div>
            {% comment %} end  {% endcomment %}
            {% comment %} start  {% endcomment %}

            {% comment %} end  {% endcomment %}






          <div class="contact__button">
            <button type="submit" class="button contact-btn">
              {{ 'templates.contact.form.send' | t }}

              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="35" viewBox="0 0 35 35" fill="none">
